#!/usr/bin/env bash


build_cunumeric_all() {
    set -x
    cd ~/;

    conda info

    set -euo pipefail;

    mamba run -n "${DEFAULT_CONDA_ENV:-legate}" --cwd ~/ --live-stream build-cunumeric-cpp;
    mamba run -n "${DEFAULT_CONDA_ENV:-legate}" --cwd ~/ --live-stream build-cunumeric-wheel;
    mamba run -n "${DEFAULT_CONDA_ENV:-legate}" --cwd ~/ --live-stream build-cunumeric-conda;
}

(build_cunumeric_all "$@");
